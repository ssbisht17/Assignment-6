<!-- views/courses.hbs -->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <br>
            <h2>Courses</h2>
            <hr />

            <!-- Add New Course Button -->
            <div class="text-right mb-3">
                <a href="/courses/add" class="btn btn-primary">Add New Course</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Course Code</th>
                            <th>Course Description</th>
                            <th></th> <!-- New header for the Remove button column -->
                        </tr>
                    </thead>
                    <tbody>
                        {{#if courses.length}}
                        {{#each courses}}
                        <tr>
                            <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                            <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                            <td>
                                <a href="/course/delete/{{this.courseId}}" class="btn btn-danger btn-sm">Remove</a>
                            </td>
                        </tr>
                        {{/each}}
                        {{else}}
                        <tr>
                            <td colspan="3" class="text-center"><strong>No courses available.</strong></td>
                        </tr>
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>